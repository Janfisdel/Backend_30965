<!-- partials/table.ejs -->
<h1 class="titulo">Vista de productos</h1>

<% if (todos.length === 0) { %>
    <h3 class="empty">No se encuentran productos disponibles</h3>
<% } else { %>
    <div class="tablaProductos">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
        </thead>

        <tbody>
            <% todos.forEach(prod=>{  %>
                <tr>
                    <td><% prod.id %></td>
                    <td><%= prod.title %></td>
                    <td> $ <%= prod.price %></td>
                    <td><img alt="foto" class="imgProducto" src=<%=prod.thumbnail %>></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
<% } %>

