<!-- partials/form.ejs -->
<h1 class="titulo">Ingreso de productos</h1>

<div class="formulario">

    <form action="/" >
  <div class="mb-3">
    <label for="title" class="form-label">Producto:</label>
    <input type="text" id="inputTitle" class="form-control" name="title" placeholder="Ingrese nombre del producto" required>
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Precio:</label>
    <input type="number" id="inputPrice" class="form-control" name="price" placeholder="Ingrese el precio del producto" required>
  </div>
  <div class="mb-3">
    <label for="thumbnail" class="form-label">URL Imágen:</label>
    <input type="text" id="inputThumbnail" class="form-control" name="thumbnail" placeholder="Ingrese URL con imágen del producto" required>
  </div>


  <button type="button" id="sendProducto" class="btn btn-primary">Enviar</button>
</form>



</div>

</div>